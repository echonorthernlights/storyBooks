<h1>Stories</h1>

<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{ stripTags (truncate body 160)}}</p>
                <div class="chip">
                    <img src="{{user.image}}" alt="" />
                    <a href="/stories/user/{{story.user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="#" class="btn grey">Read more</a>
            </div>
        </div>
    </div>
    {{else}}
    <h3>No stories to show</h3>
    {{/each}}
</div>